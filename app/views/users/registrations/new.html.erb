<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="signup-header">
    <%= link_to image_tag("back-icon.png"), unauthenticated_root_path, class: 'back' %>
    <h2>SIGN up</h2>
     <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

  </div>

  <div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field', placeholder: 'email' %>
  </div>

   <div>
    <%= f.text_field :first_name, autofocus: true, class: 'field', placeholder: 'first name' %>
  </div>

    <div>
    <%= f.text_field :last_name, autofocus: true, class: 'field', placeholder: 'last name' %>
  </div>

  <div>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'field', placeholder: 'password' %>
  </div>

  <div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'field', placeholder:'confirm password'%>
  </div>  
<% end %>
